<UserControl x:Class="TimeRecording.Views.TimeRecordingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeRecording.Views"
             xmlns:viewmodels="clr-namespace:TimeRecording.ViewModels" 
             xmlns:converter="clr-namespace:TimeRecording.Views.Converter"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converter:TimeConverter x:Key="TimeConverter"/>
        <converter:TimeFormatConverter x:Key="TimeFormatConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>    
    <Grid HorizontalAlignment="Center">
        <materialDesign:Card Width="auto" Margin="20 30 20 20">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Person:"/>
                    <ComboBox Margin="10 0 0 0" 
                              x:Name="PersonComboBox" 
                              Width="190" 
                              ItemsSource="{Binding Person}"
                              SelectedItem="{Binding SelectedPerson}"
                              DisplayMemberPath="Name"/>
                </StackPanel>

                <StackPanel  Margin="0 20 0 0" Orientation="Horizontal">
                    <Label Content="Date:"/>
                    <DatePicker Margin="10 0 0 0" x:Name="DateSelection" SelectedDate="{Binding SelectedDate}" Width="200"/>
                </StackPanel>

                <StackPanel  Margin="0 20 0 0" Orientation="Horizontal">
                    <Label Content="Working Time (HH:mm):"/>
                    <TextBox Margin="10 0 0 0" x:Name="WorkingTimeText" Text="{Binding WorkingTime, Converter={StaticResource TimeFormatConverter}, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center"/>
                </StackPanel>

                <Label Content="Target Time for the Day" Margin="0 20 0 0"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Target Time:"/>
                    <Label Margin="10 0 10 0" x:Name="DayTargetTimeText" Content="{Binding TargetTime, Converter={StaticResource TimeConverter}}" MaxWidth="90"/>
                    <Label Content="Balance:"/>
                    <Label Margin="10 0 10 0" x:Name="DayBalanceText" Content="{Binding Balance, Converter={StaticResource TimeConverter}}" MaxWidth="90"/>
                </StackPanel>

                <Label Content="Target Time for the Month" Margin="0 20 0 0"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Target Time:"/>
                    <Label Margin="10 0 10 0" x:Name="MonthTargetTimeText" Content="{Binding MonthlyTargetTime, Converter={StaticResource TimeConverter}}" MaxWidth="90"/>
                    <Label Content="Balance:"/>
                    <Label Margin="10 0 10 0" x:Name="MonthBalanceText" Content="{Binding MonthlyBalance, Converter={StaticResource TimeConverter}}" MaxWidth="90"/>
                </StackPanel>

                <StackPanel Margin="0 20 0 0"  Orientation="Horizontal" Width="Auto" HorizontalAlignment="Center">
                    <Button Margin="0 0 10 0" x:Name="LoadButton" Content="Load" Width="70" Command="{Binding LoadCommand}" />
                    <Button Margin="0 0 10 0" x:Name="SaveButton" Content="Save" Width="70" Command="{Binding SavingCommand}" />
                    <Button x:Name="ExportButton" Content="Export" Width="80" Command="{Binding ExportingCommand}" />
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
        <Grid x:Name="LoadingOverlay"
            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
            Background="#80000000"
            Panel.ZIndex="100">
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="80" Height="10"/>
            </Viewbox>
        </Grid>
    </Grid>    
</UserControl>
