<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TimeRecording.Views.Layout">
    <Style TargetType="{x:Type local:SplitContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SplitContentControl}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Content="{TemplateBinding LeftContent}" Grid.Column="0" Margin="10,10,0,10"/>
                        <Rectangle Grid.Column="1" 
                                   Width="1" 
                                   Fill="{StaticResource MaterialDesignDarkSeparatorBackground}" 
                                   Margin="0,10,0,10"/>
                        <ContentPresenter Content="{TemplateBinding RightContent}" Grid.Column="2" Margin="10,10,10,10"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>