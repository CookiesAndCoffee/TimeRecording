<UserControl x:Class="TimeRecording.Views.TargetTimeModelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeRecording.Views"
             xmlns:viewmodels="clr-namespace:TimeRecording.ViewModels" 
             mc:Ignorable="d"             
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="10 10 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBox Grid.Column="0" Grid.Row="0"
                        Text="{Binding NewModel, UpdateSourceTrigger=PropertyChanged}"
                        Margin="10 0 0 0"
                        VerticalAlignment="Center"/>
            <Button Grid.Column="1" Grid.Row="0"
                    Content="Add"
                    Command="{Binding AddCommand}"
                    Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                    Margin="10"
                    VerticalAlignment="Center"/>
            <Rectangle Grid.Column="0"
                       Grid.Row="1" 
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" 
                       Height="1"
                       Margin="0 10 0 10"
                       Stroke="{StaticResource MaterialDesignLightSeparatorBackground}" />
            <ScrollViewer Grid.Column="0" 
                          Grid.Row="2" 
                          Grid.ColumnSpan="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                <ListBox ItemsSource="{Binding TargetTimeModels}"
                         SelectedItem="{Binding SelectedTargetTimeModel}"
                         DisplayMemberPath="Model" />  
            </ScrollViewer>            
        </Grid>
        <Rectangle Grid.Column="1"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" 
                   Width="1"
                   Margin="0 10 0 10"
                   Stroke="{StaticResource MaterialDesignLightSeparatorBackground}" />
        <Grid Grid.Column="2" Margin="0 10 10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Column="0" 
                        Grid.Row="0"
                        Text="{Binding SelectedTargetTimeModel.Model, UpdateSourceTrigger=PropertyChanged}"            
                        VerticalAlignment="Center"/>
            <Button Grid.Column="1" Margin="10" Content="Save" Width="Auto" Style="{StaticResource MaterialDesignFlatButton}"/>
            <Button Grid.Column="2" Margin="10" Content="Add Times" Width="Auto" Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="4" Grid.Row="1">
                <ListView ItemsSource="{Binding TargetTimeModelTimes}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Valid From">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <DatePicker SelectedDate="{Binding ValidFrom, UpdateSourceTrigger=PropertyChanged}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="5 0 0 0"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Monday" Width="Auto"/>
                            <GridViewColumn Header="Thuesday" />
                            <GridViewColumn Header="Wednesday" />
                            <GridViewColumn Header="Thursday" />
                            <GridViewColumn Header="Firday" />
                            <GridViewColumn Header="Saturday" />
                            <GridViewColumn Header="Sunday" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </ScrollViewer>            
        </Grid>
    </Grid>
</UserControl>
