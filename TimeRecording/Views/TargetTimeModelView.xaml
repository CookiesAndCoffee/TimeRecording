<UserControl x:Class="TimeRecording.Views.TargetTimeModelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimeRecording.Views"
             xmlns:layout="clr-namespace:TimeRecording.Views.Layout"
             xmlns:viewmodels="clr-namespace:TimeRecording.ViewModels" 
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">    
    <layout:SplitContentControl>
        <layout:SplitContentControl.LeftContent>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBox Grid.Column="0" Grid.Row="0"
                Text="{Binding NewModel, UpdateSourceTrigger=PropertyChanged}"
                Margin="10 0 0 0"
                VerticalAlignment="Center"/>
                <Button Grid.Column="1" Grid.Row="0"
                        Content="Add"
                        Command="{Binding AddCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="10"
                        VerticalAlignment="Center"/>
                <Rectangle Grid.Column="0"
                           Grid.Row="1" 
                           Grid.ColumnSpan="2"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" 
                           Height="1"
                           Margin="0 10 0 10"
                           Stroke="{StaticResource MaterialDesignDarkSeparatorBackground}" />
                <ScrollViewer Grid.Column="0" 
                              Grid.Row="2" 
                              Grid.ColumnSpan="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch">
                    <ListBox ItemsSource="{Binding TargetTimeModels}"
                             SelectedItem="{Binding SelectedTargetTimeModel}"
                             DisplayMemberPath="Model"
                             SelectionChanged="TargetTimeModels_SelectionChanged"/>
                </ScrollViewer>
            </Grid>
        </layout:SplitContentControl.LeftContent>
        <layout:SplitContentControl.RightContent>
            <Grid>
                <DockPanel Visibility="{Binding HasNotSelectedTargetTimeModel}"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"
                           LastChildFill="True">
                    <TextBlock Text="Add and/or selet an Target Time Model"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                </DockPanel>
                <Grid Visibility="{Binding HasSelectedTargetTimeModel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="0" 
                             Grid.Row="0"
                             Margin="10 0 0 0"
                             Text="{Binding ChangeModel, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignFilledTextBox}"                     
                             VerticalAlignment="Center"/>
                    <Button Grid.Column="1" 
                            Margin="10" 
                            Content="Save"
                            Command="{Binding SaveCommand}"
                            Width="70"
                            HorizontalAlignment="Right"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"/>
                    <Button Grid.Column="2" 
                            Margin="10" 
                            Content="Add Times"
                            Command="{Binding AddTimesCommand}"
                            Width="Auto" 
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"/>
                    <Button Grid.Column="3" 
                            Margin="10" 
                            Content="Delete"
                            Command="{Binding DeleteCommand}"
                            Width="Auto"                    
                            Style="{StaticResource MaterialDesignOutlinedSecondaryButton}"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="4" Grid.Row="1">
                        <ListView ItemsSource="{Binding TargetTimeModelTimes}">
                            <ListView.View>
                                <GridView x:Name="gridView">
                                    <GridViewColumn Header="Valid From">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <DatePicker SelectedDate="{Binding ValidFrom, UpdateSourceTrigger=PropertyChanged}"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Center"
                                                            Margin="5 0 0 0"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </layout:SplitContentControl.RightContent>
    </layout:SplitContentControl>
</UserControl>
